<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/expenseNameTextView"
            android:layout_width="0dip"
            android:layout_weight="0.40"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/earning_category"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/expenseValueTextView"
            android:layout_width="0dip"
            android:layout_weight="0.15"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/default_zero" />

        <EditText
            android:id="@+id/addExpensesToPlanEditText"
            android:layout_width="0dip"
            android:layout_weight="0.20"
            android:layout_height="match_parent"
            android:autofillHints="earning value"
            android:gravity="end" />

        <Button
            android:id="@+id/addExpensesToPlanButton"
            android:layout_width="0dip"
            android:layout_weight="0.15"
            android:layout_height="match_parent"
            android:background="@drawable/baseline_add_box_black_24dp"
            android:gravity="center" />


    </LinearLayout>


</androidx.cardview.widget.CardView>
